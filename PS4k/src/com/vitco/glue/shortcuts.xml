<?xml version="1.0" encoding="UTF-8"?>
<head xmlns="http://www.unfine.de/schema/shortcuts">
    <!--
    PLEASE CONSIDER REFERENCES:
    - Photoshop: https://www.sitepoint.com/speed-up-your-photoshop-work-with-layer-shortcuts/
    - Photoshop: https://www.nobledesktop.com/shortcuts/photoshopcs6/mac
    - JetBrains: https://www.jetbrains.com/help/idea/2016.2/keyboard-shortcuts-you-cannot-miss.html
    - Blender: https://wiki.blender.org/index.php/Doc:2.4/Reference/Hotkeys/All
    -->
    <global>
        <!--History : fixed-->
        <shortcut ctrl="yes" key="Z" action="global_action_undo" caption="global_undo_caption" />
        <shortcut ctrl="yes" shift="yes" key="Z" action="global_action_redo" caption="global_redo_caption" />

        <!--File : fixed -->
        <shortcut ctrl="yes" key="N" action="new_file_action" caption="new_file_caption" />
        <shortcut ctrl="yes" key="O" action="load_file_action" caption="load_file_caption" />
        <shortcut ctrl="yes" key="I" action="import_file_action" caption="import_file_caption" />
        <shortcut ctrl="yes" shift="yes" key="E" action="export_file_action" caption="export_file_caption" />
        <shortcut ctrl="yes" key="S" action="quick_save_file_action" caption="quick_save_file_caption" />
        <shortcut ctrl="yes" shift="yes" key="S" action="save_file_action" caption="save_file_caption" />

        <!--Tools-->
        <shortcut key="V" action="voxel_mode_select_type_view" caption="voxel_mode_select_type_view_caption" />
        <shortcut key="C" action="voxel_mode_select_type_draw" caption="voxel_mode_select_type_draw_caption" />
        <shortcut key="R" action="voxel_mode_select_type_erase" caption="voxel_mode_select_type_erase_caption" />
        <shortcut key="F" action="voxel_mode_select_type_picker" caption="voxel_mode_select_type_picker_caption" />
        <shortcut key="G" action="voxel_mode_select_type_floodfill_tool" caption="voxel_mode_select_type_floodfill_tool_caption" />
        <shortcut key="T" action="voxel_mode_select_type_color_changer" caption="voxel_mode_select_type_color_changer_caption" />
        <shortcut key="X" action="voxel_mode_select_type_select_tool" caption="voxel_mode_select_type_select_tool_caption" />
        <shortcut action="toggle_voxel_snap" caption="toggle_voxel_snap_caption" />

        <shortcut key="F2" action="toggle_animation_mode" caption="toggle_animation_mode" />

        <!--Windows-->
        <shortcut key="1" action="mainview_state-action_show" caption="mainView_caption" />

        <shortcut key="2" action="side-view_state-action_show1" caption="xyView_caption" />
        <shortcut key="3" action="side-view_state-action_show2" caption="xzView_caption" />
        <shortcut key="4" action="side-view_state-action_show3" caption="yzView_caption" />

        <shortcut key="5" action="layer_state-action_show" caption="layer_caption" />

        <shortcut key="6" action="colorpicker_state-action_show" caption="colorpicker_caption" />
        <shortcut key="7" action="colorPalette_state-action_show" caption="colorPalette_caption" />
        <shortcut key="8" action="colorslider_state-action_show" caption="colorslider_caption" />
        <shortcut key="9" action="hexPicker_state-action_show" caption="hexPicker_caption" />
        <shortcut key="0" action="colorAdjuster_state-action_show" caption="colorAdjuster_caption" />

        <shortcut key="-" action="textureManager_state-action_show" caption="textureManager_caption" />

        <shortcut key="=" action="console_state-action_show" caption="console_caption" />
        <shortcut action="shortcut-mg_state-action_show" caption="shortcutManager_caption" />
        <shortcut action="snapshot_state-action_show" caption="snapshot_caption" />
        <shortcut action="personal_state-action_show" caption="personal_caption" />

        <!--Selection Interaction : fixed-->
        <shortcut ctrl="yes" key="X" action="selection_tool_cut" caption="selection_tool_cut_caption" />
        <shortcut ctrl="yes" key="C" action="selection_tool_copy" caption="selection_tool_copy_caption" />
        <shortcut ctrl="yes" key="V" action="selection_tool_paste" caption="selection_tool_paste_caption" />

        <shortcut key="ESC" action="selection_tool_deselect" caption="selection_tool_deselect_caption" />
        <shortcut key="DEL" action="selection_tool_delete" caption="selection_tool_delete_caption" />

        <!--Selection Interaction-->
        <shortcut ctrl="yes" key="A" action="selection_tool_select_all" caption="selection_tool_select_all_caption" />
        <shortcut ctrl="yes" shift="yes" key="A" action="selection_tool_select_all_layers_all" caption="selection_tool_select_all_layers_all_caption" />
        <shortcut ctrl="yes" shift="yes" key="W" action="selection_tool_expand_selection" caption="selection_tool_expand_selection_caption" />
        <shortcut ctrl="yes" shift="yes" key="N" action="selection_tool_as_new_layer" caption="selection_tool_as_new_layer_caption" />
        <shortcut ctrl="yes" key="DEL" action="selection_tool_recolor" caption="selection_tool_recolor_caption" />
        <shortcut ctrl="yes" shift="yes" key="T" action="selection_tool_retexture" caption="selection_tool_retexture_caption" />

        <shortcut key="ENTER" action="selection_tool_finalize_shifting" caption="selection_tool_finalize_shifting_caption" />
        <shortcut ctrl="yes" key="ENTER" action="selection_tool_finalize_shifting_as_copy" caption="selection_tool_finalize_shifting_as_copy_caption" />

        <!--Color Palette-->
        <shortcut shift="yes" key="A" action="color-palette_color_left" caption="color-palette_color_left_caption" />
        <shortcut shift="yes" key="D" action="color-palette_color_right" caption="color-palette_color_right_caption" />
        <shortcut shift="yes" key="W" action="color-palette_color_up" caption="color-palette_color_up_caption" />
        <shortcut shift="yes" key="S" action="color-palette_color_down" caption="color-palette_color_down_caption" />

        <!--Custom-->
        <shortcut action="swap_mainView_with_xyView" caption="swap_mainView_with_xyView_caption" />
        <shortcut action="swap_mainView_with_xzView" caption="swap_mainView_with_xzView_caption" />
        <shortcut action="swap_mainView_with_yzView" caption="swap_mainView_with_yzView_caption" />
        <shortcut key="P" action="pick_color_under_mouse_as_current_color" caption="pick_color_under_mouse_as_current_color_caption" />

    </global>

    <frame name="mainView">
        <!--Camera : fixed-->
        <shortcut key="W" action="mainview_zoom_in" caption="main-view_zoom_in_caption" />
        <shortcut key="S" action="mainview_zoom_out" caption="main-view_zoom_out_caption" />
        <shortcut key="A" action="mainview_rotate_left" caption="main-view_rotate_left_caption" />
        <shortcut key="D" action="mainview_rotate_right" caption="main-view_rotate_right_caption" />
        <shortcut key="E" action="mainview_rotate_up" caption="main-view_rotate_up_caption" />
        <shortcut key="Q" action="mainview_rotate_down" caption="main-view_rotate_down_caption" />

        <!--Camera-->
        <shortcut ctrl="yes" shift="yes" key="W" action="mainview_move_up" caption="main-view_move_up_caption" />
        <shortcut ctrl="yes" shift="yes" key="S" action="mainview_move_down" caption="main-view_move_down_caption" />
        <shortcut ctrl="yes" shift="yes" key="A" action="mainview_move_left" caption="main-view_move_left_caption" />
        <shortcut ctrl="yes" shift="yes" key="D" action="mainview_move_right" caption="main-view_move_right_caption" />

        <shortcut key="SPACE" action="reset_main_view_camera" caption="reset_camera_main-view_caption" />

        <!--Move Selection : fixed-->
        <shortcut key="UP" action="shift_selected_voxels_up" caption="shift_selected_voxels_up_caption" />
        <shortcut key="DOWN" action="shift_selected_voxels_down" caption="shift_selected_voxels_down_caption" />
        <shortcut key="LEFT" action="shift_selected_voxels_left" caption="shift_selected_voxels_left_caption" />
        <shortcut key="RIGHT" action="shift_selected_voxels_right" caption="shift_selected_voxels_right_caption" />
        <shortcut key="PAGE_DOWN" action="shift_selected_voxels_in" caption="shift_selected_voxels_in_caption" />
        <shortcut key="PAGE_UP" action="shift_selected_voxels_out" caption="shift_selected_voxels_out_caption" />
    </frame>

    <frame name="xyView">
        <!--Camera-->
        <shortcut ctrl="yes" key="UP" action="sideview_move_plane_in1" caption="sideview_move_plane_in_caption" />
        <shortcut ctrl="yes" key="DOWN" action="sideview_move_plane_out1" caption="sideview_move_plane_out_caption" />
        <shortcut ctrl="yes" key="SPACE" action="sideview_set_plane_to_zero1" caption="sideview_set_plane_to_zero_caption" />

        <shortcut key="W" action="sideview_zoom_in_tb1" caption="sideview_zoom_out" />
        <shortcut key="S" action="sideview_zoom_out_tb1" caption="sideview_zoom_in" />
        <shortcut key="SPACE" action="sideview_reset_view1" caption="sideview_reset_view_tooltip" />

        <!--Move Selection : fixed-->
        <shortcut key="UP" action="shift_selected_voxels_up" caption="shift_selected_voxels_up_caption" />
        <shortcut key="DOWN" action="shift_selected_voxels_down" caption="shift_selected_voxels_down_caption" />
        <shortcut key="LEFT" action="shift_selected_voxels_out" caption="shift_selected_voxels_out_caption" />
        <shortcut key="RIGHT" action="shift_selected_voxels_in" caption="shift_selected_voxels_in_caption" />
    </frame>

    <frame name="xzView">
        <!--Camera-->
        <shortcut ctrl="yes" key="UP" action="sideview_move_plane_in2" caption="sideview_move_plane_in_caption" />
        <shortcut ctrl="yes" key="DOWN" action="sideview_move_plane_out2" caption="sideview_move_plane_out_caption" />
        <shortcut ctrl="yes" key="SPACE" action="sideview_set_plane_to_zero2" caption="sideview_set_plane_to_zero_caption" />

        <shortcut key="W" action="sideview_zoom_in_tb2" caption="sideview_zoom_out" />
        <shortcut key="S" action="sideview_zoom_out_tb2" caption="sideview_zoom_in" />
        <shortcut key="SPACE" action="sideview_reset_view2" caption="sideview_reset_view_tooltip" />

        <!--Move Selection : fixed-->
        <shortcut key="UP" action="shift_selected_voxels_left" caption="shift_selected_voxels_left_caption" />
        <shortcut key="DOWN" action="shift_selected_voxels_right" caption="shift_selected_voxels_right_caption" />
        <shortcut key="LEFT" action="shift_selected_voxels_out" caption="shift_selected_voxels_out_caption" />
        <shortcut key="RIGHT" action="shift_selected_voxels_in" caption="shift_selected_voxels_in_caption" />
    </frame>

    <frame name="yzView">
        <!--Camera-->
        <shortcut ctrl="yes" key="UP" action="sideview_move_plane_in3" caption="sideview_move_plane_in_caption" />
        <shortcut ctrl="yes" key="DOWN" action="sideview_move_plane_out3" caption="sideview_move_plane_out_caption" />
        <shortcut ctrl="yes" key="SPACE" action="sideview_set_plane_to_zero3" caption="sideview_set_plane_to_zero_caption" />

        <shortcut key="W" action="sideview_zoom_in_tb3" caption="sideview_zoom_out" />
        <shortcut key="S" action="sideview_zoom_out_tb3" caption="sideview_zoom_in" />
        <shortcut key="SPACE" action="sideview_reset_view3" caption="sideview_reset_view_tooltip" />

        <!--Move Selection : fixed-->
        <shortcut key="UP" action="shift_selected_voxels_up" caption="shift_selected_voxels_up_caption" />
        <shortcut key="DOWN" action="shift_selected_voxels_down" caption="shift_selected_voxels_down_caption" />
        <shortcut key="LEFT" action="shift_selected_voxels_left" caption="shift_selected_voxels_left_caption" />
        <shortcut key="RIGHT" action="shift_selected_voxels_right" caption="shift_selected_voxels_right_caption" />
    </frame>

    <frame name="console">
        <shortcut action="console_toggle_auto_show" caption="console_auto-show_caption" />
        <shortcut action="console_toggle_auto_scroll" caption="console_auto-scroll_caption" />
        <shortcut action="console_action_clear" caption="console_clear_caption" />
    </frame>

    <frame name="snapshot">
    </frame>

    <frame name="shortcutManager">
    </frame>

    <frame name="personal">
    </frame>

    <frame name="layer">
        <!--Basic Layer Interactions-->
        <shortcut key="DEL" action="layer-frame_remove-layer" caption="layer-frame_remove-layer_caption" />
        <shortcut ctrl="yes" shift="yes" key="N" action="layer-frame_add-layer" caption="layer-frame_add-layer_caption" />
        <shortcut ctrl="yes" key="]" action="layer-frame_move-layer-up" caption="layer-frame_move-layer-up_caption" />
        <shortcut ctrl="yes" key="[" action="layer-frame_move-layer-down" caption="layer-frame_move-layer-down_caption" />
    </frame>

    <frame name="colorpicker">
    </frame>

    <frame name="colorslider">
    </frame>

    <frame name="textureManager">
        <shortcut key="DEL" action="texturemg_action_remove" caption="texturemg_remove_caption" />
        <shortcut ctrl="yes" shift="yes" key="N" action="texturemg_action_add" caption="texturemg_add_caption" />
        <shortcut action="texturemg_action_replace" caption="texturemg_replace_caption" />
        <shortcut action="texturemg_action_export" caption="texturemg_export_caption" />
    </frame>

    <frame name="hexPicker">
    </frame>

    <frame name="colorPalette">
    </frame>

    <frame name="colorAdjuster">
    </frame>
</head>